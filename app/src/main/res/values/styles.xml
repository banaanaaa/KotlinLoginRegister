<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_marginBottom">@dimen/spacing_xlarge</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">true</item>
        <item name="boxCornerRadiusBottomStart">@dimen/round_size_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/round_size_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/round_size_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_size_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ColoredButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="cornerRadius">@dimen/round_size_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
