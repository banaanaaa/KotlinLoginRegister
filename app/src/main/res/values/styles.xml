<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleOfHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/mainTextSize</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="StyleOfField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/field_valid</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:textSize">@dimen/secondTextSize</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="StyleOfButtonInFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

</resources>
